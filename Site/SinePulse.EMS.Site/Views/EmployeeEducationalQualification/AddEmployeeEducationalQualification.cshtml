@model SinePulse.EMS.Site.Models.AddEmployeeEducationalQualificationViewModel
@using SinePulse.EMS.Domain.Enums

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "AddEmployeeEducationalQualification";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddEmployeeEducationalQualification.Title"]</div>
        <form asp-action="AddEmployeeEducationalQualification" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" runat="server" />
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployeeEducationalQualification.InstituteName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="InstituteName" type="text" class="form-control" />
                    <span asp-validation-for="InstituteName" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployeeEducationalQualification.MajorSubject"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="MajorSubject" type="text" class="form-control" />
                    <span asp-validation-for="MajorSubject" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployeeEducationalQualification.DegreeName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="DegreeName" class="form-control" asp-items="Html.GetEnumSelectList<EducationDegreeEnum>()">
                      <option selected="selected" value="">@Localizer["AddEmployeeEducationalQualification.SelectDegreeName"]</option>
                    </select>
                    <span asp-validation-for="DegreeName" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployeeEducationalQualification.PassingYear"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PassingYear" type="text" class="form-control" />
                    <span asp-validation-for="PassingYear" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '/Employee/ViewEmployee?employeeId=@Model.EmployeeId'">@Localizer["AddEmployeeEducationalQualification.CancelButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddEmployeeEducationalQualification.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

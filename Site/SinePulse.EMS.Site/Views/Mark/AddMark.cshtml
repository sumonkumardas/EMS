@using Microsoft.AspNetCore.Mvc.Localization
@using SinePulse.EMS.Domain.Enums
@model SinePulse.EMS.Site.Models.AddMarkViewModel
@inject IViewLocalizer Localizer


<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="portlet-body form">
            <!-- BEGIN FORM-->

            <form asp-action="AddMark" class="form-horizontal" id="form_sample_3">
              <div class="form-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label> @Localizer["AddMark.Session"]</label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        @Html.DropDownListFor(x => x.SessionId, new SelectList(Model.Sessions, "Id", "SessionName"), @Localizer["AddMark.SelectSession"].Value, new { @class = "form-control", id = "sessionDropDown", required = true })
                        <span asp-validation-for="SessionId" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="col-md-4">
                                <label>@Localizer["AddMark.Term"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.TermId, Enumerable.Empty<SelectListItem>(), @Localizer["AddMark.SelectTerm"].Value, new { @class = "form-control", id = "termDropDown", required = true })
                                <span asp-validation-for="TermId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="col-md-4" align="left">
                                <label>@Localizer["AddMark.Subject"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                @Html.DropDownListFor(x => x.SubjectId, Enumerable.Empty<SelectListItem>(), @Localizer["AddMark.SelectSubject"].Value, new { @class = "form-control", id = "subjectDropDown", required = true })
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                  
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="col-md-4">
                                <label>@Localizer["AddMark.ExamType"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                @Html.DropDownListFor(x => x.ExamType, Enumerable.Empty<SelectListItem>(), @Localizer["AddMark.SelectExamtype"].Value, new { @class = "form-control", id = "examTypeDropDown", required = true })
                                <span asp-validation-for="TermId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="col-md-4" align="left">
                                <label>@Localizer["AddMark.ClassTest"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                <div class="radio-list">
                                    @Html.DropDownListFor(x => x.TestId, Enumerable.Empty<SelectListItem>(), @Localizer["AddMark.SelectClassTest"].Value, new { @class = "form-control", id = "classTestDropDown", required = true })
                                    <span asp-validation-for="TestId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                  <div class="clearfix"></div>
                </div>
                
                <div class="form-group" hidden>
                  <div class="col-md-12">
                    <input id="studentSectionId" asp-for="StudentSectionId" type="text" class="form-control" />
                  </div>
                </div>

                <div class="clearfix"></div>
                <div class="form-group">
                  <div class="col-md-12">
                    <table class="table table-striped table-hover" id="sample_2">
                      <thead class="filterCriteria">
                        <tr>
                            <th>@Localizer["AddMark.StudentName"]</th>
                            <th>@Localizer["AddMark.Section"]</th>
                          <th>@Localizer["AddMark.Roll"]</th>
                          <th>@Localizer["AddMark.FullMarks"]</th>
                          <th>@Localizer["AddMark.ObtainedMarks"]</th>
                        </tr>
                      </thead>

                    </table>
                  </div>
                </div>
                <br />
                <div class="clearfix"></div>
                @*<div><b>@Localizer["AddMark.OtherSectionsStudent"]</b></div>
                <div class="form-group">
                  <div class="col-md-12">
                    <table class="table table-striped table-hover" id="sample_5">
                      <thead class="filterCriteria">
                        <tr>
                          <th>@Localizer["AddMark.StudentName"]</th>
                          <th>@Localizer["AddMark.Roll"]</th>
                          <th>@Localizer["AddMark.FullMarks"]</th>
                          <th>@Localizer["AddMark.ObtainedMarks"]</th>
                          <th></th>
                        </tr>
                      </thead>

                    </table>
                  </div>
                </div>*@
                <div class="btn-container">

                  <div class="clearfix"></div>
                </div>
              </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

    </script>
}

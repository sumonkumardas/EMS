@model IEnumerable<SinePulse.EMS.Site.Models.AccountHeadViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = "Index";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="row">
        <div class="col-md-12">
          <div class="page-bar margin-top-15">
            <div class="page-toolbar">
              <div class="btn-group pull-right">
                <button type="button" class="btn btn-fit-height dark-bg dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="100" data-close-others="true">
                  <i class="fa fa-bars"></i>
                </button>
                <ul class="dropdown-menu pull-right light-arrow" role="menu">
                  <li>
                    <a href="/AccountHead/AddAccountHead">@Localizer["Index.AddAccountHead"]</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <table class="table table-striped table-hover" id="sample_5">
            <thead class="filterCriteria">
              <tr>
                <th>@Localizer["Index.AccountHeadName"]</th>
                <th>@Localizer["Index.AccountCode"]</th>
                <th>@Localizer["Index.AccountHeadType"]</th>
                <th>@Localizer["Index.AccountPeriod"]</th>
                <th>@Localizer["Index.Status"]</th>
                <th>@Localizer["Index.Action"] </th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td>
                    <a href="/AccountHead/ViewAccountHead?accountHeadId=@item.AccountHeadId" class="action-link">@item.AccountHeadName</a>
                  </td>
                  <td>@item.AccountCode</td>
                  <td>@Html.DisplayFor(modelItem => item.AccountHeadType)</td>
                  <td>@Html.DisplayFor(modelItem => item.AccountPeriod)</td>
                  <td>@Html.DisplayFor(modelItem => item.Status)</td>
                  <td>
                    <a href="/AccountHead/UpdateAccountHead?accountHeadId=@item.AccountHeadId" class="action-link"><i class="fa fa-edit action-icon"></i></a>
                    <a href="#" class="action-link"><i class="fa fa-minus-circle action-icon"></i></a>
                  </td>
                </tr>
              }

            </tbody>
          </table>
            
        </div>
      </div>
    </div>
  </div>
</div>
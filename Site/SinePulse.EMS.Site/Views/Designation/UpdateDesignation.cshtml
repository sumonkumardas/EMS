@using Microsoft.AspNetCore.Mvc.Localization
@model DesignationViewModel
@using SinePulse.EMS.Domain.Enums
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = "UpdateDesignation";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN CONTAINER -->
<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["UpdateDesignation.Title"]</div>
        <form asp-action="UpdateDesignation" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* hidden field *@
            <input asp-for="Id" runat="server" type="hidden" />
            @* hidden field *@
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateDesignation.DesignationName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="DesignationName" type="text" class="form-control" />
                    <span asp-validation-for="DesignationName" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateDesignation.Status"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusEnum>()">
                      <option>@Localizer["UpdateDesignation.SelectStatus"]</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateDesignation.EmployeeType"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="EmployeeType" class="form-control" asp-items="Html.GetEnumSelectList<EmployeeTypeEnum>()">
                      <option>@Localizer["UpdateDesignation.SelectEmployeeType"]</option>
                    </select>
                    <span asp-validation-for="EmployeeType" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">

              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("Index", "Designation")'">@Localizer["UpdateDesignation.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["UpdateDesignation.UpdateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>


@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

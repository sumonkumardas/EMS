@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SinePulse.EMS.Site.Models.GradeViewModel
@using SinePulse.EMS.Domain.Enums
@{
  ViewData["Title"] = "UpdateEmployeeGrade";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN CONTAINER -->
<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["UpdateEmployeeGrade.Title"]</div>
        <form asp-action="UpdateEmployeeGrade" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" runat="server" />
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateEmployeeGrade.Name"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="GradeTitle" type="text" class="form-control" />
                    <span asp-validation-for="GradeTitle" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateEmployeeGrade.Status"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusEnum>()">
                      <option selected="selected">@Localizer["UpdateEmployeeGrade.SelectStatus"]</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateEmployeeGrade.MinSalary"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="MinSalary" type="text" class="form-control" />
                    <span asp-validation-for="MinSalary" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateEmployeeGrade.MaxSalary"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="MaxSalary" type="number" class="form-control" />
                    <span asp-validation-for="MaxSalary" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("Index", "EmployeeGrade")'">@Localizer["UpdateEmployeeGrade.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["UpdateEmployeeGrade.UpdateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

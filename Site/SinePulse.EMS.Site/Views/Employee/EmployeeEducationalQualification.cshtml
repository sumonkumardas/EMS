@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model EmployeeEducationalQualificationsViewModel
<input type="hidden" asp-for="EmployeeId"/>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>@Localizer["EmployeeEducationalQualification.Institute"]</th>
    <th>@Localizer["EmployeeEducationalQualification.Degree"]</th>
    <th>@Localizer["EmployeeEducationalQualification.Major"]</th>
    <th>@Localizer["EmployeeEducationalQualification.PassingYear"]</th>
    <th>@Localizer["EmployeeEducationalQualification.Action"]</th>
  </tr>
  </thead>

  <tbody>
  @{
    if (Model.EducationalQualifications != null && Model.EducationalQualifications.Any())
    {
      foreach (var educationalQualification in Model.EducationalQualifications)
      {
        <tr>
          <td>
            @Html.DisplayFor(model => educationalQualification.InstituteName)
          </td>
          <td>
            @Html.DisplayFor(model => educationalQualification.DegreeName)
          </td>
          <td>
            @Html.DisplayFor(model => educationalQualification.MajorSubject)
          </td>
          <td>
            @Html.DisplayFor(model => educationalQualification.PassingYear)
          </td>
          <td>
            <a href="/EmployeeEducationalQualification/EditEducationalQualification?educationalQualificationId=@educationalQualification.Id&employeeId=@Model.EmployeeId" class="action-link"><i class="fa fa-edit action-icon"></i></a>
          </td>
        </tr>
      }
    }
  }
  </tbody>
</table>

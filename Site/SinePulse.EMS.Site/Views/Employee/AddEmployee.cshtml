@model SinePulse.EMS.Site.Models.AddEmployeeViewModel
@using SinePulse.EMS.Domain.Shared
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@using SinePulse.EMS.Domain.Enums
@{
  ViewData["Title"] = "Add Employee";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddEmployee.Title"]</div>
        <form asp-action="AddEmployee" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ObjectId" runat="server" />
            <input type="hidden" asp-for="AssociationType" runat="server" />
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.FullName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="FullName" type="text" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.Grade"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    @Html.DropDownListFor(x => x.GradeId, new SelectList(@Model.Grades, "Id", "GradeTitle"), @Localizer["AddEmployee.SelectGrade"].Value, new { @class = "form-control" })
                    <span asp-validation-for="GradeId" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.DOB"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="DOB" type="text" value="" class="form-control datepicker">
                    <span asp-validation-for="DOB" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.MobileNo"] </label>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="MobileNo" type="text" class="form-control" />
                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.JoiningDate"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="JoiningDate" type="text" value="" class="form-control datepicker">
                    <span asp-validation-for="JoiningDate" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.EmailAddress"] </label>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="EmailAddress" type="email" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.EmployeeType"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="EmployeeType" id="employeeTypeDropDown" class="form-control" asp-items="Html.GetEnumSelectList<EmployeeTypeEnum>()">
                      <option selected="selected" value="">@Localizer["AddEmployee.SelectEmployeeType"]</option>
                    </select>
                    <span asp-validation-for="EmployeeType" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.NationalId"] </label>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="NationalId" type="text" class="form-control" />
                    <span asp-validation-for="NationalId" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.JobType"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    @Html.DropDownListFor(x => x.JobTypeId, new SelectList(@Model.JobTypes, "Id", "JobTitle"), @Localizer["AddEmployee.SelectJobType"].Value, new { @class = "form-control" })
                    <span asp-validation-for="JobTypeId" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.BankAccountNo"] </label>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="BankAccountNo" type="text" class="form-control" />
                    <span asp-validation-for="BankAccountNo" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.Designation"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    @Html.DropDownListFor(x => x.DesignationId, Enumerable.Empty<SelectListItem>(), @Localizer["AddEmployee.SelectDesignation"].Value, new { @class = "form-control", id = "designationDropDown" })
                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddEmployee.ReportTo"] </label>
                  </div>
                  <div class="col-md-8">
                    @Html.DropDownListFor(x => x.ReportToId, new SelectList(Model.Employees, "Id", "FullName"), @Localizer["AddEmployee.SelectReportTo"].Value, new { @class = "form-control" })
                    <span asp-validation-for="ReportToId" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("Index", "Employee", new { associationType=Model.AssociationType, objectId=Model.ObjectId})'">@Localizer["AddEmployee.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddEmployee.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            var designationDropDown = $("#designationDropDown");
            $("#employeeTypeDropDown").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Employee/GetDesignationsByEmployeeType?employeeType=" + $("#employeeTypeDropDown").val(),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                      designationDropDown.children('option:not(:first)').remove();
                        jQuery.each(response, function (index, item) {
                            var dropdownItem = new Option(item.DesignationName, item.Id);
                            designationDropDown.append(dropdownItem);
                        });
                    },
                    failure: function (response) {
                        alert("Failure..! Could not Fetch Designation Data using Ajax.");
                    },
                    error: function (response) {
                        alert("Error..! Could not Fetch Designation Data using Ajax.");
                    }
                });
            });
        });
    </script>
}

@using Microsoft.AspNetCore.Mvc.Localization
@model AddTermTestMarksViewModel
@inject IViewLocalizer Localizer

<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        
            <div class="portlet-body form">
                <form asp-action="AddTermTestMarks" class="form-horizontal" id="form_sample_3">
                  <div class="form-body">
                    <div align="left" asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TermId" />
                    <input type="hidden" asp-for="BranchMediumId" />
                    <div class="row-fluid col-md-12 zero-padding-row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <div class="col-md-4">
                            <label>@Localizer["AddTermTestMarks.Class"]</label><span class="required">*</span>
                          </div>
                          <div class="col-md-8">
                            @Html.DropDownListFor(x => x.ClassId, Enumerable.Empty<SelectListItem>(), @Localizer["AddTermTestMarks.SelectClass"].Value, new { @class = "form-control", id = "classDropDown", required = true })
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                          </div>
                        </div>
                      </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label> @Localizer["AddTermTestMarks.Group"]</label><span class="required">*</span>
                                </div>
                                <div class="col-md-8">
                                    <div class="radio-list">
                                        @Html.DropDownListFor(x => x.Group, Enumerable.Empty<SelectListItem>(), @Localizer["AddTermTestMarks.SelectGroup"].Value, new { @class = "form-control", id = "groupDropDown", required = true })
                                        <span asp-validation-for="Group" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>@Localizer["AddTermTestMarks.Section"]</label><span class="required">*</span>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.SectionId, Enumerable.Empty<SelectListItem>(), @Localizer["AddTermTestMarks.SelectSection"].Value, new { @class = "form-control", id = "sectionDropDown", required = true })
                                    <span asp-validation-for="SectionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid col-md-12 zero-padding-row">
                      
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>@Localizer["AddTermTestMarks.Subject"]</label><span class="required">*</span>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.SubjectId, Enumerable.Empty<SelectListItem>(), @Localizer["AddTermTestMarks.SelectSubject"].Value, new { @class = "form-control", id = "subjectDropDown", required = true })
                                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>@Localizer["AddTermTestMarks.ExamType"]</label><span class="required">*</span>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.ExamType, Enumerable.Empty<SelectListItem>(), @Localizer["AddTermTestMarks.SelectExamType"].Value, new { @class = "form-control", id = "examTypeDropDown", required = true })
                                    <span asp-validation-for="ExamType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    
                    <br />
                    <table class="table table-striped table-hover" id="sample_3">
                      <thead class="filterCriteria">
                        <tr class="uppercase">
                          <th>@Localizer["AddTermTestMarks.StudentName"]</th>
                          <th>@Localizer["AddTermTestMarks.Roll"]</th>
                          <th>@Localizer["AddTermTestMarks.FullMarks"]</th>
                          <th>@Localizer["AddTermTestMarks.PassMarks"]</th>
                          <th>@Localizer["AddTermTestMarks.MarkObtained"]</th>
                          <th>@Localizer["AddTermTestMarks.GraceMarks"]</th>
                          <th>@Localizer["AddTermTestMarks.Remarks"]</th>
                        </tr>
                      </thead>
                      <tbody id="accountHeadsTableBody"></tbody>
                    </table>

                    <br />
                    <div class="btn-container">
                      <button type="submit" id="saveButton" class="btn custom-btn custom-cancel-btn">@Localizer["AddTermTestMarks.Save"]</button>
                      <div class="clearfix"></div>
                    </div>
                  </div>
                </form>
            </div>
        
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>

    </script>
}
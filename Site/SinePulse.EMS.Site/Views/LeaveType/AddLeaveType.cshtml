@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SinePulse.EMS.Site.Models.AddLeaveTypeViewModel

@{
  ViewData["Title"] = "Add Leave Type";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddLeaveType.Title"]</div>
        <form asp-action="AddLeaveType" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddLeaveType.LeaveName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="LeaveName" type="text" class="form-control" />
                    <span asp-validation-for="LeaveName" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddLeaveType.LeavesPerYear"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="LeavesPerYear" type="text" class="form-control" value="" />
                    <span asp-validation-for="LeavesPerYear" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddLeaveType.BeyondTheCurrentLeaveBalance"] </label>
                  </div>
                  <div class="container">
                    <div class="col-md-8">
                      <input asp-for="CanEmployeesApplyBeyondTheCurrentLeaveBalance" type="checkbox" value="true" checked>
                      <span asp-validation-for="CanEmployeesApplyBeyondTheCurrentLeaveBalance" class="text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddLeaveType.WillLeaveCarriedForward"] </label>
                  </div>
                  <div class="container">
                    <div class="col-md-8">
                      <input asp-for="WillLeaveCarriedForward" type="checkbox" value="true" checked id="WillLeaveCarriedForward">
                      <span asp-validation-for="WillLeaveCarriedForward" class="text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddLeaveType.PercentageOfLeaveCarriedForward"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PercentageOfLeaveCarriedForward" type="text" value="" id="PercentageOfLeaveCarriedForward" class="form-control" />
                    <span asp-validation-for="PercentageOfLeaveCarriedForward" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">

              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("Index", "LeaveType" )'">@Localizer["AddLeaveType.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddLeaveType.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>


@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  <script>
    $(document).ready(function() {

      if ($('[id*=WillLeaveCarriedForward]').is(':checked')) {
        $('[id*=PercentageOfLeaveCarriedForward]').attr('disabled', false);
      }
      else {
        $('[id*=PercentageOfLeaveCarriedForward]').attr('disabled', true);
      }

    });
        
    $(function () {
      $('[id*=WillLeaveCarriedForward]').click(function () {
        if ($('[id*=WillLeaveCarriedForward]').is(':checked')) {
          $('[id*=PercentageOfLeaveCarriedForward]').attr('disabled', false);
        }
        else {
          $('[id*=PercentageOfLeaveCarriedForward]').attr('disabled', true);
          $('[id*=PercentageOfLeaveCarriedForward]').val("");
        }
      });
    });
  </script>
}

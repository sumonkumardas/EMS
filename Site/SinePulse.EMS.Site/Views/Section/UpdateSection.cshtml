@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SinePulse.EMS.Site.Models.EditSectionViewModel
@using SinePulse.EMS.Domain.Enums

@{
  ViewData["Title"] = "EditSection";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["UpdateSection.Title"]</div>
        <form asp-action="UpdateSection" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.SectionName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="SectionName" type="text" class="form-control" />
                    <span asp-validation-for="SectionName" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.NumberOfStudents"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="NumberOfStudents" type="text" class="form-control" />
                    <span asp-validation-for="NumberOfStudents" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.Class"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    @Html.DropDownListFor(x => x.ClassId, new SelectList(Model.Classes, "Id", "ClassName"), @Localizer["UpdateSection.SelectClass"].Value, new { @class = "form-control" })
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.TotalClasses"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="TotalClasses" type="text" class="form-control" />
                    <span asp-validation-for="TotalClasses" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.Group"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="Group" class="form-control" asp-items="Html.GetEnumSelectList<GroupEnum>()">
                      <option>@Localizer["UpdateSection.SelectGroup"]</option>
                    </select>
                    <span asp-validation-for="Group" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.DurationOfClass"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="DurationOfClass" type="text" class="form-control" />
                    <span asp-validation-for="DurationOfClass" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.Session"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    @Html.DropDownListFor(x => x.SessionId, new SelectList(Model.Sessions, "Id", "SessionName"), @Localizer["UpdateSection.SelectSession"].Value, new { @class = "form-control" })
                    <span asp-validation-for="SessionId" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateSection.Status"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusEnum>()">
                      <option>@Localizer["UpdateSection.SelectStatus"]</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("ViewBranchMedium", "BranchMedium",new{branchMediumId = @Model.BranchMediumId})'">@Localizer["UpdateSection.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right" onclick="location.href ='@Url.Action("UpdateSection", "Section",Model)'">@Localizer["UpdateSection.UpdateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SinePulse.EMS.Site.Models.AddSalaryComponentTypeViewModel

@{
  ViewData["Title"] = "AddSalaryComponentType";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddSalaryComponentType.Title"]</div>
        <form asp-action="AddSalaryComponentType" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row-fluid">
              <div class="col-md-12">
                <div class="form-group">
                  <div class="col-md-2">
                    <label>@Localizer["AddSalaryComponentType.ComponentType"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-10">
                    <input asp-for="ComponentType" type="text" class="form-control" />
                    <span asp-validation-for="ComponentType" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href='@Url.Action("Index", "SalaryComponentType")'">@Localizer["AddSalaryComponentType.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddSalaryComponentType.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model SinePulse.EMS.Site.Models.AddRoleViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using SinePulse.EMS.ProjectPrimitives
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = "AddRole";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddRole.Title"]</div>
        <form asp-action="AddRole" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row-fluid">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddRole.RoleName"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="RoleName" type="text" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddRole.RoleType"]</label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <select asp-for="RoleType" required="true" class="form-control" asp-items="Html.GetEnumSelectList<RoleTypeEnum>()">
                      <option value="">@Localizer["AddRole.SelectRoleType"]</option>
                    </select>
                    <span asp-validation-for="RoleType" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("Index")'">@Localizer["AddRole.CancelButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddRole.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

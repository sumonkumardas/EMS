@using Microsoft.AspNetCore.Mvc.Localization
@model AddFeatureInRoleViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="title-on-top">Add Feature In Role</div>
                <form asp-action="AddFeatureInRole" class="form-horizontal box-shadow-form" id="form_sample_3">
                    <div class="form-body">
                        <input type="hidden" asp-for="RoleId" id="RoleId"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row-fluid">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Feature Type</label><span class="required">*</span>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(x => x.FeatureTypeId, new SelectList(Model.FeatureTypes, "FeatureTypeId", "FeatureTypeName"), "Select Feature Type", new {@class = "form-control", id = "featureTypeDropDown"})
                                        <span asp-validation-for="FeatureTypeId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Feature</label><span class="required">*</span>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(x => x.FeatureIds, new SelectList(Model.Features, "FeatureId", "FeatureName"), "Select Features", new {@class = "form-control", required = "true", multiple = "true", id="featureDropDown"})
                                        <span asp-validation-for="FeatureIds" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br/>
                        <div class="btn-container">
                            <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '@Url.Action("ViewRole", new {roleId = Model.RoleId})'">Cancel</button>
                            <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">Create</button>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/assets/global/scripts/Role/addFeatureInRole.js"></script>
}
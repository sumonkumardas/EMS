@using Microsoft.AspNetCore.Mvc.Localization
@model SinePulse.EMS.Site.Models.ExamConfigurationViewModel
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = "ViewExamType";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-container">
  <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form asp-action="ViewExamConfiguration" class="form-horizontal box-shadow-form" id="form_sample_3">
                    <div class="form-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row-fluid">
                            <div class="page-bar margin-bottom-15">
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-4">
                                      <label>@Localizer["ViewExamConfiguration.Class"]</label><span class="required">*</span>
                                    </div>
                                    <div class="col-md-8">
                                        <input disabled  asp-for="ClassName" type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <div class="col-md-4">
                                      <label>@Localizer["ViewExamConfiguration.Subject"]</label><span class="required">*</span>
                                    </div>
                                    <div class="col-md-8">
                                        <input disabled  asp-for="SubjectName" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                      <label>@Localizer["ViewExamConfiguration.ClassTest%"] </label>
                                    </div>
                                    <div class="col-md-8">
                                        <input disabled  asp-for="ClassTestPercentage" type="text" class="form-control" />
                                        <span asp-validation-for="ClassTestPercentage" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <table class="table table-striped table-hover">
                                    <tr>
                                      <th>@Localizer["ViewExamConfiguration.ExamType"]</th>
                                      <th>@Localizer["ViewExamConfiguration.FullMarks"]</th>
                                      <th>@Localizer["ViewExamConfiguration.PassMarks"]</th>
                                    </tr>
                                    <tr>
                                      <td>@Localizer["ViewExamConfiguration.Subjective"]</td>
                                        <td>
                                            <input disabled  asp-for="SubjectiveFullMark" type="text" class="form-control" />
                                        </td>
                                        <td>
                                            <input disabled  asp-for="SubjectivePassMark" type="text" class="form-control" />
                                        </td>
                                    </tr>
                                    <tr>
                                      <td>@Localizer["ViewExamConfiguration.Objective"]</td>
                                        <td>
                                            <input disabled  asp-for="ObjectiveFullMark" type="text" class="form-control" />
                                        </td>
                                        <td>
                                            <input disabled  asp-for="ObjectivePassMark" type="text" class="form-control" />
                                        </td>
                                    </tr>
                                    <tr>
                                      <td>@Localizer["ViewExamConfiguration.Practical"]</td>
                                        <td>
                                            <input disabled  asp-for="PracticalFullMark" type="text" class="form-control" />
                                        </td>
                                        <td>
                                            <input disabled  asp-for="PracticalPassMark" type="text" class="form-control" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br />
                        <div class="form-group" hidden>
                            <div class="col-md-12">
                                <input disabled  asp-for="ExamConfigurationId" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="btn-container">
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

@model SinePulse.EMS.Site.Models.NotificationConfigurationViewModel
@using SinePulse.EMS.Domain.Shared
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@using SinePulse.EMS.Domain.Enums

<div class="page-bar margin-bottom-15">
</div>
<div class="row-fluid col-md-12 zero-padding-row">

    <div class="col-md-4">
        <div class="row-fluid">
          <div class="col-md-12">
            @Localizer["ViewNotificationConfiguration.After"] <br />
            @Model.EntryDelayPeriod <br />
            @Model.EntryDelayTimeIntervalType
            @Localizer["ViewNotificationConfiguration.OfSchoolStartTime"]
            <div class="uppercase profile-stat-text">
              @Localizer["ViewNotificationConfiguration.StudentDelayNotification"]
            </div>
          </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="row-fluid">
          <div class="col-md-12">
            @Localizer["ViewNotificationConfiguration.After"] <br />

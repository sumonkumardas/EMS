@model SinePulse.EMS.Site.Models.AddStudentAddressViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "AddStudentAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddStudentAddress.Title"]</div>
        <form asp-action="AddStudentAddress" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StudentId" type="hidden" runat="server" />
            <input asp-for="BranchMediumId" type="hidden" runat="server" />
            <div class="row-fluid">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="uppercase profile-stat-text">
                    @Localizer["AddStudentAddress.PermanentAddress"]
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.Street1"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PermanentAddressStreet1" type="text" class="form-control" />
                    <span asp-validation-for="PermanentAddressStreet1" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.Street2"] </label>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PermanentAddressStreet2" type="text" class="form-control" />
                    <span asp-validation-for="PermanentAddressStreet2" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.PostalCode"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PermanentAddressPostalCode" type="text" class="form-control" />
                    <span asp-validation-for="PermanentAddressPostalCode" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.City"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PermanentAddressCity" type="text" class="form-control" />
                    <span asp-validation-for="PermanentAddressCity" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="uppercase profile-stat-text">
                    @Localizer["AddStudentAddress.PresentAddress"]
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.Street1"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PresentAddressStreet1" type="text" class="form-control" />
                    <span asp-validation-for="PresentAddressStreet1" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.Street2"] </label>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PresentAddressStreet2" type="text" class="form-control" />
                    <span asp-validation-for="PresentAddressStreet2" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.PostalCode"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PresentAddressPostalCode" type="text" class="form-control" />
                    <span asp-validation-for="PresentAddressPostalCode" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.City"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="PresentAddressCity" type="text" class="form-control" />
                    <span asp-validation-for="PresentAddressCity" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddStudentAddress.SameAsPermanentAddress"] </label>
                  </div>
                  <div class="container">
                    <div class="col-md-8">
                      <input asp-for="SameAsPermanentAddress" type="checkbox">
                      <span asp-validation-for="SameAsPermanentAddress" class="text-danger"></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '/Student/ViewStudent?studentId=@Model.StudentId&branchMediumId=@Model.BranchMediumId'">@Localizer["AddStudentAddress.CancelButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddStudentAddress.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>
@section Scripts
    {
    <script>
        $("#SameAsPermanentAddress").change(function () {
            if (this.checked) {
                $('#PresentAddressStreet1').val($('#PermanentAddressStreet1').val());
                $('#PresentAddressStreet2').val($('#PermanentAddressStreet2').val());
                $('#PresentAddressPostalCode').val($('#PermanentAddressPostalCode').val());
                $('#PresentAddressCity').val($('#PermanentAddressCity').val());
            }
        });
    </script>
}













@using SinePulse.EMS.Domain.Enums
@model SinePulse.EMS.Site.Models.StudentAttendanceViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "UpdateStudentAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["UpdateStudentAttendance.Title"]</div>
        <form asp-action="UpdateStudentAttendance" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Student.Id" type="hidden" runat="server" />
            <input asp-for="StudentId" type="hidden" runat="server" />
            <input asp-for="BranchMediumId" type="hidden" runat="server" />
            <input asp-for="Id" type="hidden" runat="server" />
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-12">
                <div class="form-group">
                  <div class="col-md-2">
                    <label>@Localizer["UpdateStudentAttendance.AttendanceDate"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-10">
                    <div class="date date-picker" data-date-format="mm/dd/yyyy" data-date-autoclose="true">
                      <input asp-for="AttendanceDate" type="text" class="form-control" onfocus="(this.type='date')" onblur="{this.type='text'}" name="AttendanceDate">
                      <span class="input-group-btn calander-icon-on-date-picker">
                        <button class="btn default input-bg-color" type="button">
                          <i class="fa fa-calendar"></i>
                        </button>
                      </span>
                    </div>
                    <!-- /input-group -->

                    <span asp-validation-for="AttendanceDate" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateStudentAttendance.InTime"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="InTime" type="text" onfocus="(this.type='time')" onblur="{this.type='text'}" class="form-control"/>
                    <span asp-validation-for="InTime" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["UpdateStudentAttendance.OutTime"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    <input asp-for="OutTime" type="text" onfocus="(this.type='time')" onblur="{this.type='text'}" class="form-control" />
                    <span asp-validation-for="OutTime" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>

            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick='location.href="/Student/ViewStudent?studentId=@Model.StudentId"+"&branchMediumId=@Model.BranchMediumId"'>@Localizer["UpdateStudentAttendance.CancelButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["UpdateStudentAttendance.UpdateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>
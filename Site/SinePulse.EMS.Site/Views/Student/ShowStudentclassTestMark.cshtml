@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using SinePulse.EMS.Domain.Enums
@model SinePulse.EMS.Site.Models.DisplayClassTestMarkViewModel

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form asp-action="" class="form-horizontal" id="form_sample_3">
            <div class="form-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-4" align="left">
                                <label>@Localizer["ShowStudentclassTestMark.Session"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                @Html.DropDownListFor(x => x.SessionId, new SelectList(Model.Sessions, "Id", "SessionName"), @Localizer["ShowStudentclassTestMark.SelectSession"].Value, new { @class = "form-control", id = "ctSessionDropDown", required = true })
                                <span asp-validation-for="SessionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-4" align="left">
                                <label>@Localizer["ShowStudentclassTestMark.Term"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                @Html.DropDownListFor(x => x.TermId, Enumerable.Empty<SelectListItem>(), @Localizer["ShowStudentclassTestMark.SelectTerm"].Value, new { @class = "form-control", id = "ctTermDropDown", required = true })
                                <span asp-validation-for="TermId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="clearfix"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-4" align="left">
                                <label>@Localizer["ShowStudentclassTestMark.Class"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                <input disabled="disabled" id="ctClassName" asp-for="ClassName" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-4" align="left">
                                <label>@Localizer["ShowStudentclassTestMark.Roll"]</label><span class="required">*</span>
                            </div>
                            <div class="col-md-8" align="left">
                                <input disabled="disabled" id="ctRoll" asp-for="Roll" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="form-group" hidden>
                    <div class="col-md-12">
                        <input id="studentSectionId" asp-for="StudentId" type="text" class="form-control" />
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover" id="sample_2">
                            <thead class="filterCriteria">
                                <tr>
                                    <th>@Localizer["ShowStudentclassTestMark.Subject"]</th>
                                    <th>@Localizer["ShowStudentclassTestMark.ExamType"]</th>
                                    <th>@Localizer["ShowStudentclassTestMark.FullMarks"]</th>
                                    <th>@Localizer["ShowStudentclassTestMark.ObtainedMarks"]</th>

                                </tr>
                            </thead>
                            <tbody id="ctMarksTableBody"></tbody>

                        </table>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
      </div>
  </div>
</div>


@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

  
}

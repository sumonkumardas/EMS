@model SinePulse.EMS.Site.Models.StudentAttendanceViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "ViewStudentAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="portlet box form-conatiner">
                <div class="icon-container">
                    <a href="/Student/UpdateStudentAttendance?attendanceId=@Model.Id" class="fa fa-edit action-link"></a>
                    <a href="/StudentAttendance/ShowStudentAttendanceList" class="fa fa-tasks action-link"></a>
                </div>
                
                <div class="portlet-body form">
                  <div class="container-fluid">
                    <div class="row-fluid ">
                      <div class="col-md-6">
                        <div class="row custom-row">
                          <div class="col-md-4 title"><strong>@Localizer["ViewStudentAttendance.Student"]</strong></div>
                          <div class="col-md-8 value">@Model.Student.FullName</div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="row custom-row">
                          
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="container-fluid">
                    <div class="row-fluid ">
                      <div class="col-md-6">
                        <div class="row custom-row">
                          <div class="col-md-4 title"><strong>@Localizer["ViewStudentAttendance.InTime"]</strong></div>
                          <div class="col-md-8 value">@Model.InTime</div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="row custom-row">
                          <div class="col-md-4 title"><strong>@Localizer["ViewStudentAttendance.OutTime"]</strong></div>
                          <div class="col-md-8 value">@Model.OutTime</div>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
            </div>
        </div>
    </div>
</div>

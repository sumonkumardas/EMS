@using Microsoft.AspNetCore.Mvc.Localization
@model SinePulse.EMS.Site.Models.AddPublicHolidayViewModel
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = "AddPublicHoliday";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="title-on-top">@Localizer["AddPublicHoliday.Title"]</div>
        <form asp-action="AddPublicHoliday" class="form-horizontal box-shadow-form" id="form_sample_3">
          <div class="form-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-12">
                <div class="form-group">
                  <div class="col-md-2">
                    <label>@Localizer["AddPublicHoliday.Name"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-10">
                    <input asp-for="HolidayName" type="text" class="form-control" />
                    <span asp-validation-for="HolidayName" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row-fluid col-md-12 zero-padding-row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddPublicHoliday.StartDate"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
                    
                      <input type="text" class="form-control datepicker"  name="StartDate">
                     
                    <!-- /input-group -->

                    <span asp-validation-for="StartDate" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div class="col-md-4">
                    <label>@Localizer["AddPublicHoliday.EndDate"] </label><span class="required">*</span>
                  </div>
                  <div class="col-md-8">
             
                      <input type="text" class="form-control datepicker"  name="EndDate">
                  
                    <!-- /input-group -->

                    <span asp-validation-for="EndDate" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="btn-container">
              <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href='@Url.Action("Index", "PublicHoliday")'">@Localizer["AddPublicHoliday.CancleButton"]</button>
              <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddPublicHoliday.CreateButton"]</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </form>
        <!-- END FORM-->
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

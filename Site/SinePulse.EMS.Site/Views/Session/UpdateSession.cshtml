@using Microsoft.AspNetCore.Mvc.Localization
@using SinePulse.EMS.Domain.Enums
@inject IViewLocalizer Localizer
@model SessionViewModel
@{
  ViewData["Title"] = "UpdateSession";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN CONTAINER -->

<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
          <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="title-on-top">@Localizer["UpdateSession.Title"]</div>
            <form asp-action="UpdateSession" class="form-horizontal box-shadow-form" id="form_sample_3">
              <div class="form-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" runat="server" />
                <div class="row-fluid col-md-12 zero-padding-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["UpdateSession.SessionName"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <input asp-for="SessionName" type="text" class="form-control" />
                        <span asp-validation-for="SessionName" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["UpdateSession.Status"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusEnum>()">
                          <option>@Localizer["UpdateSession.SelectStatus"]</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["UpdateSession.StartDate"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <input asp-for="StartDate" type="text" class="form-control datepicker">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["UpdateSession.EndDate"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <input asp-for="EndDate" type="text" class="form-control datepicker">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["UpdateSession.IsSessionClosed"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <div class="radio-list">
                          <label class="radio-inline">
                            @Html.RadioButtonFor(model => model.IsSessionClosed, true) Yes
                          </label>
                          <label class="radio-inline">
                            @Html.RadioButtonFor(model => model.IsSessionClosed, false) No
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">

                  </div>
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="form-group" hidden>
                  <div class="col-md-12">
                    <input asp-for="SessionType" type="text" class="form-control" />
                    <span asp-validation-for="SessionType" class="text-danger"></span>
                  </div>
                </div>

                <div class="form-group" hidden>
                  <div class="col-md-12">
                    <input asp-for="ObjectId" type="number" class="form-control" />
                    <span asp-validation-for="ObjectId" class="text-danger"></span>
                  </div>
                </div>

                <div class="btn-container">
                  <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href='@Url.Action("Index", "Session")'">@Localizer["UpdateSession.CancleButton"]</button>
                  <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["UpdateSession.UpdateButton"]</button>
                  <div class="clearfix"></div>
                </div>
              </div>
            </form>
            <!-- END FORM-->
          </div>
        </div>
    </div>
</div>

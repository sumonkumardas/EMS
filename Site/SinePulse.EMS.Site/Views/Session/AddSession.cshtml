@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model AddSessionViewModel
@{
    ViewData["Title"] = "Add Session";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN CONTAINER -->
<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
          <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="title-on-top">@Localizer["AddSession.Title"]</div>
            <form asp-action="AddSession" class="form-horizontal box-shadow-form" id="form_sample_3">
              <div class="form-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="col-md-2">
                        <label>@Localizer["AddSession.SessionName"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-10">
                        <input asp-for="SessionName" type="text" class="form-control" />
                        <span asp-validation-for="SessionName" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="row-fluid col-md-12 zero-padding-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["AddSession.StartDate"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <input asp-for="StartDate" type="text" value="" class="form-control datepicker">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="col-md-4">
                        <label>@Localizer["AddSession.EndDate"] </label><span class="required">*</span>
                      </div>
                      <div class="col-md-8">
                        <input asp-for="EndDate" type="text" value="" class="form-control datepicker">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="form-group" hidden>
                  <div class="col-md-12">
                    <input asp-for="SessionType" type="text" class="form-control" />
                    <span asp-validation-for="SessionType" class="text-danger"></span>
                  </div>
                </div>

                <div class="form-group" hidden>
                  <div class="col-md-12">
                    <input asp-for="ObjectId" type="number" class="form-control" />
                    <span asp-validation-for="ObjectId" class="text-danger"></span>
                  </div>
                </div>

                <div class="btn-container">

                  <button type="button" class="btn custom-btn custom-cancel-btn pull-left" onclick="location.href = '/Session/CancelAddSession?sessionType=@Model.SessionType&objectId=@Model.ObjectId#tab_session'">@Localizer["AddSession.CancleButton"]</button>
                  <button type="submit" class="btn custom-btn custom-cancel-btn pull-right">@Localizer["AddSession.CreateButton"]</button>
                  <div class="clearfix"></div>
                </div>
              </div>
            </form>
            <!-- END FORM-->
          </div>
        </div>
    </div>
</div>

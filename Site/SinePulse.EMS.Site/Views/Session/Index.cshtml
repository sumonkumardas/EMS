@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ShowSessionListViewModel
@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-container">
  <!-- BEGIN CONTENT -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="row">
        <div class="col-md-12">
          <div class="page-bar margin-top-15">
            <div class="page-toolbar">
              <div class="btn-group pull-right">
                <button type="button" class="btn btn-fit-height dark-bg dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="100" data-close-others="true">
                  <i class="fa fa-bars"></i>
                </button>
                <ul class="dropdown-menu pull-right light-arrow" role="menu">
                  <li>
                    <a href="/Session/AddSession">@Localizer["Index.AddSession"]</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <table class="table table-striped table-hover" id="sample_5">

            <thead class="filterCriteria">
              <tr>
                <th>
                  @Localizer["Index.SessionName"]
                </th>
                <th>
                  @Localizer["Index.StartDate"]
                </th>
                <th>
                  @Localizer["Index.EndDate"]
                </th>
                <th>
                  @Localizer["Index.IsCurrent"]
                </th>
                <th>
                  @Localizer["Index.Status"]
                </th>
                <th> @Localizer["Index.Action"] </th>
              </tr>
            </thead>

            <tbody>
              @{
                foreach (var session in Model.Sessions)
                {
                  <tr>
                    <td>
                      @Html.DisplayFor(s => session.SessionName)
                    </td>
                    <td>
                      @session.StartDate.ToString("dd MMMM, yyyy")
                    </td>
                    <td>
                      @session.EndDate.ToString("dd MMMM, yyyy")
                    </td>
                    <td>
                      @Html.DisplayFor(s => session.IsSessionClosed)
                    </td>
                    <td>
                      @Html.DisplayFor(s => session.Status)
                    </td>
                    <td>
                      <a href="@Url.Action("ViewSession", new {id = session.Id})" class="action-link">
                        <i class="fa fa-eye action-icon"></i>
                      </a>
                      <a href="@Url.Action("UpdateSession", new {id = session.Id})" class="action-link">
                        <i class="fa fa-edit action-icon"></i>
                      </a>
                      <a href="#" class="action-link">
                        <i class="fa fa-minus-circle action-icon"></i>
                      </a>
                    </td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>